{
  "name": "@silvenga/blog",
  "private": true,
  "license": "MIT",
  "repository": "git@github.com:Silvenga/silvenga.com",
  "author": "Mark Lopez <m@silvenga.com>",
  "packageManager": "yarn@4.3.1",
  "type": "module",
  "browserslist": ">0.5%, last 2 versions, Firefox ESR, not dead, not op_mini all",
  "importSort": {
    ".ts,.tsx": {
      "style": "import-sort-style-module-compact",
      "options": {}
    }
  },
  "targets": {
    "default": {
      "distDir": "./dist"
    }
  },
  "parcelIgnore": [
    "http://",
    "https://",
    "ftp://"
  ],
  "alias": {
    "./img/*": "./.cache/eleventy/img/$1",
    "./posts/rss.xml": "./.cache/eleventy/posts/rss.xml"
  },
  "@parcel/resolver-default": {
    "packageExports": true
  },
  "staticFiles": [
    {
      "staticPath": ".cache/eleventy/robots.txt",
      "staticOutPath": ""
    }
  ],
  "scripts": {
    "tailwindcss": "tailwindcss",
    "nodemon": "nodemon",
    "eleventy": "eleventy",
    "eleventy:watch": "cross-env SUPPRESS_GIT=1 nodemon --watch './src/**/*' --watch eleventy.config.ts --ext '*' --ignore './src/_client/**/*' --ignore './src/*.css' --exec yarn eleventy:build",
    "eleventy:build": "tsx node_modules/@11ty/eleventy/cmd.cjs --config=eleventy.config.ts",
    "parcel": "parcel",
    "parcel:start": "parcel --port 9999 --config .parcelrc --cache-dir .cache/parcel '.cache/eleventy/**/*.html' '.cache/eleventy/**/*.xml'",
    "parcel:build": "parcel build --config .prod.parcelrc --cache-dir .cache/parcel '.cache/eleventy/**/*.html' '.cache/eleventy/**/*.xml'",
    "sri-dist": "posthtml -u posthtml-sri --posthtml-sri.basePath=dist/ dist/**/*.html",
    "lint": "eslint --max-warnings=0 src",
    "start": "concurrently \"yarn:eleventy:watch\" \"yarn:parcel:start\" --restart-tries -1",
    "clean": "rimraf ./dist && rimraf ./.cache",
    "build": "yarn clean && yarn eleventy:build && yarn parcel:build && yarn sri-dist"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0-alpha.14",
    "@11ty/eleventy-fetch": "^4.0.1",
    "@11ty/eleventy-img": "^5.0.0-beta.4",
    "@11ty/eleventy-plugin-rss": "^2.0.1",
    "@eslint/js": "^9.6.0",
    "@mdit/plugin-tasklist": "^0.12.0",
    "@parcel/optimizer-data-url": "2.12.0",
    "@parcel/packager-raw-url": "2.12.0",
    "@parcel/packager-xml": "2.12.0",
    "@parcel/reporter-bundle-analyzer": "2.12.0",
    "@parcel/transformer-inline-string": "2.12.0",
    "@parcel/transformer-webmanifest": "2.12.0",
    "@parcel/transformer-xml": "2.12.0",
    "@tailwindcss/typography": "^0.5.13",
    "@types/11ty__eleventy-img": "^4.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/luxon": "^3.4.2",
    "@types/markdown-it": "^14.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eleventy-plugin-time-to-read": "^1.3.0",
    "eslint": "^9.6.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.34.3",
    "highlight.js": "^11.9.0",
    "luxon": "^3.4.4",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.0.1",
    "markdown-it-highlightjs": "^4.1.0",
    "markdown-it-image-figures": "^2.1.1",
    "markdown-it-toc-done-right": "^4.2.0",
    "node-cache": "^5.1.2",
    "nodemon": "^3.1.4",
    "parcel": "2.12.0",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "parcel-resolver-ignore": "^2.2.0",
    "postcss": "^8.4.39",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-doctype": "^1.1.1",
    "posthtml-external-link": "^0.1.2",
    "posthtml-sri": "^1.2.1",
    "process": "^0.11.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^5.0.7",
    "tailwind-highlightjs": "^2.0.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.16.0",
    "typescript": "^5.5.2",
    "typescript-eslint": "8.0.0-alpha.39"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.18",
    "@martinstark/throttle-ts": "^1.3.0"
  }
}
